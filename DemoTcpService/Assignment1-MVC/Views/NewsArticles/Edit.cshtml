@model Assignment1_MVC.Models.NewsArticle

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
	<div class="card">
		<div class="card-header bg-primary text-white text-center">
			<h2>Edit News Article</h2>
		</div>
		<div class="card-body">
			<form asp-action="Edit">
				<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
				<input type="hidden" asp-for="NewsArticleId" />

				<div class="row">
					<div class="col-md-6">
						<div class="form-group mb-3">
							<label asp-for="NewsTitle" class="form-label fw-bold"></label>
							<input asp-for="NewsTitle" class="form-control" placeholder="Enter news title..." />
							<span asp-validation-for="NewsTitle" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="Headline" class="form-label fw-bold"></label>
							<input asp-for="Headline" class="form-control" placeholder="Enter headline..." />
							<span asp-validation-for="Headline" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="NewsSource" class="form-label fw-bold"></label>
							<input asp-for="NewsSource" class="form-control" placeholder="Enter source name..." />
							<span asp-validation-for="NewsSource" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="UpdatedById" class="form-label fw-bold"></label>
							<input asp-for="UpdatedById" class="form-control" />
							<span asp-validation-for="UpdatedById" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="ModifiedDate" class="form-label fw-bold"></label>
							<input asp-for="ModifiedDate" class="form-control" type="date" />
							<span asp-validation-for="ModifiedDate" class="text-danger"></span>
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group mb-3">
							<label asp-for="CreatedDate" class="form-label fw-bold"></label>
							<input asp-for="CreatedDate" class="form-control" type="date" />
							<span asp-validation-for="CreatedDate" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="CategoryId" class="form-label fw-bold"></label>
							<select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
								<option value="">Select a category</option>
							</select>
							<span asp-validation-for="CategoryId" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="NewsStatus" class="form-label fw-bold"></label>
							<select asp-for="NewsStatus" class="form-select">
								<option value="true">Published</option>
								<option value="false">Draft</option>
							</select>
							<span asp-validation-for="NewsStatus" class="text-danger"></span>
						</div>

						<div class="form-group mb-3">
							<label asp-for="CreatedById" class="form-label fw-bold"></label>
							<select asp-for="CreatedById" class="form-select" asp-items="ViewBag.CreatedById">
								<option value="">Select author</option>
							</select>
							<span asp-validation-for="CreatedById" class="text-danger"></span>
						</div>

					</div>


					<div class="col-md-12">
						<div class="form-group mb-3">
							<label asp-for="NewsContent" class="form-label fw-bold"></label>
							<textarea asp-for="NewsContent" class="form-control" rows="4" placeholder="Enter content..."></textarea>
							<span asp-validation-for="NewsContent" class="text-danger"></span>
						</div>
					</div>
				</div>

				<div class="text-center mt-4">
					<button type="submit" class="btn btn-success px-4">
						<i class="bi bi-save"></i> Save Changes
					</button>
					<a asp-action="Index" class="btn btn-secondary px-4 ms-2">
						<i class="bi bi-arrow-left"></i> Back to List
					</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
